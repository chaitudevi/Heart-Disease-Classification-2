{
  "uid": "heart-disease-api",
  "title": "Heart Disease API",
  "tags": ["heart-disease-api"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "time": {
    "from": "now-30m",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "Request rate (req/s)",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(api_requests_total[5m]))",
          "legendFormat": "total"
        }
      ]
    },
    {
      "id": 2,
      "title": "Latency p50/p95/p99 (seconds)",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
      "targets": [
        {
          "refId": "A",
          "expr": "histogram_quantile(0.95, sum(rate(api_request_latency_seconds_bucket[5m])) by (le))",
          "legendFormat": "p95"
        },
        {
          "refId": "B",
          "expr": "histogram_quantile(0.50, sum(rate(api_request_latency_seconds_bucket[5m])) by (le))",
          "legendFormat": "p50"
        },
        {
          "refId": "C",
          "expr": "histogram_quantile(0.99, sum(rate(api_request_latency_seconds_bucket[5m])) by (le))",
          "legendFormat": "p99"
        }
      ]
    },
    {
      "id": 3,
      "title": "HTTP error rate (4xx/5xx req/s)",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(api_requests_total{status=~\"4..\"}[5m]))",
          "legendFormat": "4xx"
        },
        {
          "refId": "B",
          "expr": "sum(rate(api_requests_total{status=~\"5..\"}[5m]))",
          "legendFormat": "5xx"
        }
      ]
    },
    {
      "id": 4,
      "title": "Prediction confidence p50",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 },
      "targets": [
        {
          "refId": "A",
          "expr": "histogram_quantile(0.50, sum(rate(prediction_confidence_bucket[5m])) by (le))",
          "legendFormat": "p50"
        }
      ]
    },
    {
      "id": 5,
      "title": "Top 5 endpoints by request rate",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": { "x": 0, "y": 16, "w": 12, "h": 8 },
      "targets": [
        {
          "refId": "A",
          "expr": "topk(5, sum by (path) (rate(api_requests_total[5m])))",
          "legendFormat": "{{path}}"
        }
      ]
    },
    {
      "id": 6,
      "title": "Latency p95 by endpoint (seconds)",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": { "x": 12, "y": 16, "w": 12, "h": 8 },
      "targets": [
        {
          "refId": "A",
          "expr": "topk(5, histogram_quantile(0.95, sum by (le, path) (rate(api_request_latency_seconds_bucket[5m]))))",
          "legendFormat": "{{path}}"
        }
      ]
    }
  ]
}
